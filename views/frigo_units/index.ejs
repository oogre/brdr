<div id="unitList" class="table-list table-responsive">
	<div class="hide hidden-new-form"><%- partial('create_simple.ejs') %></div>
</div>

<script type="text/javascript">
	
	var  documentLoaded = function (){
		$("#unitList").append(JST["assets/templates/itemList.ejs"]({
			h3 : "Liste d'unité' frigorique",
			table_name : "frigo_units",
			parentSelector : "unitList",
			items : JSON.parse('<%- JSON.stringify(units) %>'),
			buttons : {
				new : {
					label : "Nouvelle unité frigorique",
					onsuccess : "newFrigoUnit"
				}
			}
 		}))
	};

	window.addEventListener("load", documentLoaded);
	<% if(false === res.locals.layout){ %>
		documentLoaded();
	<% } %>
</script>