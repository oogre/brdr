<div id="clientList" class="table-list table-responsive">
	<div class="hide hidden-new-form"><%- partial('create_simple.ejs') %></div>
</div>

<script type="text/javascript">
	
	var  documentLoaded = function (){
		$("#clientList").append(JST["assets/templates/itemList.ejs"]({
			h3 : "Liste de client",
			table_name : "clients",
			parentSelector : "clientList",
			items : JSON.parse('<%- JSON.stringify(clients) %>'),
			buttons : {
				new : {
					label : "Nouveau client",
					onsuccess : "newClient"
				}
			},
			getter : "getShops"
 		}))
	};

	window.addEventListener("load", documentLoaded);
	<% if(false === res.locals.layout){ %>
		documentLoaded();
	<% } %>
</script>