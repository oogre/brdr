<div id="groupList" class="table-list table-responsive">
	<div class="hide hidden-new-form"><%- partial('create_simple.ejs') %></div>
</div>

<script type="text/javascript">
	
	var  documentLoaded = function (){
		$("#groupList").append(JST["assets/templates/itemList.ejs"]({
			h3 : "Liste de groupe frigorique",
			table_name : "frigo_groups",
			parentSelector : "groupList",
			items : JSON.parse('<%- JSON.stringify(groups) %>'),
			buttons : {
				new : {
					label : "Nouveau groupe frigorique",
					onsuccess : "newFrigoGroup"
				}
			},
			getter : "getFrigoUnits"
 		}))
	};

	window.addEventListener("load", documentLoaded);
	<% if(false === res.locals.layout){ %>
		documentLoaded();
	<% } %>
</script>